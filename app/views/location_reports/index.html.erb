<p id="notice"><%= notice %></p>

<h1>Location Reports</h1>

<table>
  <thead>
    <tr>
      <th>Speed report</th>
      <th>Hookups</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_reports.each do |location_report| %>
      <tr>
        <td><%= location_report.speed_report_id %></td>
        <td><%= location_report.hookups %></td>
        <td><%= location_report.comment %></td>
        <td><%= link_to 'Show', location_report %></td>
        <td><%= link_to 'Edit', edit_location_report_path(location_report) %></td>
        <td><%= link_to 'Destroy', location_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

